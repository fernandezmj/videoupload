%h1 Upload Videos

=form_for @video, :html => {:multipart => true} do |f|

  %p Title:
  =f.text_field :title, placeholder: "Title"

  %p Description:
  =f.text_area :description, placeholder: "Description"

  %p Category:
  =f.select :category_id, options_for_select(Category.all.collect{ |x|[x.title, x.id]  })

  %p Thumbnail:
  =f.file_field :thumbnail, name: "video[thumbnail]"
  
  %p Video:
  =f.file_field :video_link, name: "video[video_link]"

  %p 
    =f.submit
